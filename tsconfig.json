{
	"compilerOptions": {
		"target": "es5",
		"jsx": "react",
		"module": "commonjs",
		"lib": [
			"es2017",
			"dom"
		],
		"plugins": [
			{
				"name": "tslint-language-service"
			}
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"exclude": [
		"src/**/*.spec.ts",
		"src/**/*.spec.tsx"
	]
}